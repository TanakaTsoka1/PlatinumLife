@using PlatinumLife.Models
@model Invoice

@{
    ViewData["Title"] = "Add a new Invoice";
}

<div class="row-text">
    <div class="">
        <p>
            <h1>Invoice @Model.InvoiceId.</h1>
        </p>
        <div class="row">
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Submitter"> </label>
                    <input asp-for="Submitter" class="form-control" readonly />
                    <span asp-validation-for="Submitter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Department"> </label>
                    <input asp-for="Department" class="form-control" readonly />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InvoiceDate"> </label>
                    <input asp-for="InvoiceDate" class="form-control" readonly />
                    <span asp-validation-for="InvoiceDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentDate"> </label>
                    <input asp-for="PaymentDate" class="form-control" readonly />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentRecipientName"> </label>
                    <input asp-for="PaymentRecipientName" class="form-control" readonly />
                    <span asp-validation-for="PaymentRecipientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentRecipientBank"> </label>
                    <input asp-for="PaymentRecipientBank" class="form-control" readonly />
                    <span asp-validation-for="PaymentRecipientBank" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentRecipientAccount"> </label>
                    <input asp-for="PaymentRecipientAccount" class="form-control" />
                    <span asp-validation-for="PaymentRecipientAccount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentDescription"> </label>
                    <input asp-for="PaymentDescription" class="form-control" readonly />
                    <span asp-validation-for="PaymentDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SigningManager"> </label>
                    <input asp-for="SigningManager" class="form-control" readonly />
                    <span asp-validation-for="SigningManager" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create">
                    <a class="" asp-action="Edit" asp-route-id="@Model.InvoiceId "></a>
                    <a class="" asp-action="Index">Show All</a>
                    <a class"btn-outline-primary" asp-for="Invoice" asp-action="Sign" asp-route-id="@Model.InvoiceId"><i class="bi bi-pencil-square"></i>Sign</a>
                </div>
            </div>
        </div>
    </div>
</div>